<script>
    var rIndexTag, tableTag = document.getElementById('tableTag');

    function addRowTag() {
        var newRowTag = tableTag.insertRow(tableTag.length),
            cell1Tag = newRowTag.insertCell(0),
            tag = document.getElementById('tag').value;
        cell2Tag = newRowTag.insertCell(1),
            valore = document.getElementById('valore').value;
        cell1Tag.innerHTML = tag;
        cell2Tag.innerHTML = valore;
        document.getElementById('tag').value = "";
        document.getElementById('valore').value = "";
        selectedToInputTag();
    }

    function selectedToInputTag() {
        for (var i = 1; i < tableTag.rows.length; i++) {
            tableTag.rows[i].onclick = function () {
                rIndexTag = this.rowIndex;
                document.getElementById('tag').value = this.cells[0].innerHTML.replace(/\s/g, '');
                document.getElementById('valore').value = this.cells[1].innerHTML.replace(/\s/g, '');
            };
        }
    }
    selectedToInputTag();

    function editSelectedRowTag() {
        var tag = document.getElementById('tag').value;
        tableTag.rows[rIndexTag].cells[0].innerHTML = tag;
        document.getElementById('tag').value = "";
        var valore = document.getElementById('valore').value;
        tableTag.rows[rIndexTag].cells[1].innerHTML = valore;
        document.getElementById('valore').value = "";
    }

    function deleteSelectedRowTag() {
        tableTag.deleteRow(rIndexTag);
        document.getElementById('tag').value = "";
        document.getElementById('valore').value = "";
    }

    function arrayTag() {
        var t = [];
        for (var i = 1, c = 0; i < tableTag.rows.length; i++, c++) {
            t[c] = tableTag.rows[i].cells[0].innerHTML;
            t[c] = t[c] + "-";
