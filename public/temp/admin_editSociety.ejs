<script>
    var rIndex, table = document.getElementById('table');

    function addRowSport() {
        var newRow = table.insertRow(table.length),
            cell1 = newRow.insertCell(0),
            sport = document.getElementById('sport').value;
        cell1.innerHTML = sport;
        document.getElementById('sport').value = "";
        selectedToInputSport();
    }

    function selectedToInputSport() {
        for (var i = 1; i < table.rows.length; i++) {
            table.rows[i].onclick = function () {
                rIndex = this.rowIndex;
                document.getElementById('sport').value = '';
                document.getElementById('sport').value = this.cells[0].innerHTML.replace(/\s/g, '');
            };
        }
    }
    selectedToInputSport();

    function editSelectedRowSport() {
        var sport = document.getElementById('sport').value;
        table.rows[rIndex].cells[0].innerText = sport;
        document.getElementById('sport').value = "";
    }

    function deleteSelectedRowSport() {
        table.deleteRow(rIndex);
        document.getElementById('sport').value = "";
    }

    function arraySport() {
        var s = [];
        for (var i = 1; i < table.rows.length; i++) {
            s.push(table.rows[i].innerText);
        }

        document.getElementById('arrSpo').value = s;

        console.log(s);
        var blur3 = document.getElementById('blur3');
        blur3.classList.toggle('activo');
        var popup3 = document.getElementById('popup3');
        popup3.classList.toggle('activo');
    }
</script>
