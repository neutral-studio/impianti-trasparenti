<div class="container">
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto">


            <div class="card" style="margin-top: 11rem;">
                <div class="mx-auto mt-3">
                    <a class="btn" style="text-transform: none !important;" href="/user/google"><i
                            class="fab fa-google mr-1"></i>Registrati con Google</a>
                </div>
                <form class="form" method="POST" action="/user/register">



                    <div class="card-body" style="padding-left: 10px !important;">
                        <p class="card-description text-center">Oppure</p>
                        <div class="input-group mt-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            </div>
                            <input type="mail" name ="mail" id="mail" class="form-control custom-input" placeholder="Mail" required></input>
                        </div>

                        <div class="input-group mt-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" name="password" id="password" class="form-control custom-input" placeholder="Password" required></input>
                        </div>

                        <div class="input-group mt-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-check"></i></span>
                            </div>
                            <input type="password" name="password" class="form-control custom-input" placeholder="Conferma Password" required></input>
                        </div>

                    </div>
                    <div class="card-footer justify-content-center">
                        <button class="btn btn-white mt-3" style="text-transform: none !important;" type="submit"><i
                                class="fas fa-user-plus mr-1"></i></i>Registrati</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>